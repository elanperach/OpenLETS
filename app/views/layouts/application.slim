html lang=(current_locale.to_s)
  head profile="http://www.w3.org/2005/10/profile" lang=(current_locale)
    meta charset="utf-8"
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title= meta_title

    = stylesheet_link_tag "application#{rtl? ? '-rtl' : ''}"

    script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"
    = javascript_include_tag "application"
    = csrf_meta_tags

  body[class="#{locale_direction}" ]
    = render 'layouts/dynamic_css' if current_economy
    = render "layouts/#{'economy_' if current_economy}top_bar"
    .large-12.columns
      br
      = render 'layouts/flash_messages'
    = yield

  footer
    .large-12.columns
      
      .large-6.columns
        p 
          | Built with 
          = link_to "OpenLETS", "http://www.openlets.org", target: :blank

      .large-6.columns
        ul.inline-list.right
          li
            = link_to t("forms.faq"), pages_faq_path